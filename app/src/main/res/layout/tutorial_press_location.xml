<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewPressLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="clip_horizontal|center_horizontal|top"
        android:layout_marginTop="100dp"
        android:background="@color/cast_expanded_controller_progress_text_color"
        android:gravity="center"
        android:text="Нажмите на кнопку геолокации"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:textStyle="bold" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:clickable="true"
        app:backgroundTint="@android:color/white"
        app:fabCustomSize="96dp"
        app:fabSize="auto"
        app:maxImageSize="48dp"
        app:srcCompat="@drawable/ic_my_location_grey_24dp" />
</FrameLayout>